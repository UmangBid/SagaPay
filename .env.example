# Shared
LOG_LEVEL=INFO
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
REDIS_URL=redis://redis:6379/0
API_KEY=change-me-api-key

# Infrastructure auth
POSTGRES_USER=finpay
POSTGRES_PASSWORD=change-me-postgres-password
POSTGRES_DB_ORCHESTRATOR=finpay_orchestrator
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=change-me-grafana-password

# Gateway
SERVICE_NAME=api-gateway
ORCHESTRATOR_URL=http://orchestrator:8001
RATE_LIMIT_PER_MINUTE=30
IDEMPOTENCY_TTL_SECONDS=86400

# Service-specific Postgres DSNs (used by migrations and service processes)
ORCHESTRATOR_POSTGRES_DSN=postgresql+psycopg2://finpay:change-me-postgres-password@postgres:5432/finpay_orchestrator
RISK_POSTGRES_DSN=postgresql+psycopg2://finpay:change-me-postgres-password@postgres:5432/finpay_risk
PROVIDER_POSTGRES_DSN=postgresql+psycopg2://finpay:change-me-postgres-password@postgres:5432/finpay_provider
LEDGER_POSTGRES_DSN=postgresql+psycopg2://finpay:change-me-postgres-password@postgres:5432/finpay_ledger
NOTIFICATION_POSTGRES_DSN=postgresql+psycopg2://finpay:change-me-postgres-password@postgres:5432/finpay_notification
# Runtime per service expects POSTGRES_DSN to be set to that service's DSN.

# Risk service overrides
RISK_VELOCITY_PER_HOUR=20
RISK_REVIEW_AMOUNT_CENTS=100000
RISK_DENY_FREQUENCY_THRESHOLD=50

# Provider adapter overrides
PROVIDER_URL=http://provider-adapter:8003

# OpenTelemetry
# Local compose includes collector on this host.
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4318/v1/traces
